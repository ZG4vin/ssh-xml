<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

    <!--配置和客户管理相关的动作-->
    <package name="customer" extends="MyDefault" namespace="/customer">
        <action name="addUICustomer" class="com.gavin.web.action.CustomerAction" method="addUICustomer">
            <result name="addUICustomer">/jsp/customer/add.jsp</result>
        </action>
        <action name="findAllCustomer" class="com.gavin.web.action.CustomerAction" method="findAllCustomer">
            <result name="findAllCustomer">/jsp/customer/list.jsp</result>
        </action>
        <action name="addCustomer" class="com.gavin.web.action.CustomerAction" method="addCustomer">
            <result name="listCustomer" type="redirectAction">findAllCustomer</result>
        </action>
    </package>
</struts>